<%- include('../includes/head.ejs') %>
  </head>
  <%- include('../includes/body.ejs') %>
    <div class="row">
      <div class="col s12 align-self-center">
        <div class="d-flex mb-4">
          <div class="flex-grow-1">
            <h3>User Listing</h3>
          </div>
          <div>
            <a href="/users/new" class="btn btn-primary">Create user</a>
          </div>
        </div>

        <div class="row justify-content-between">
          <% if (users.length > 0) { %>
            <% for (let user of users) { %>
              <div class="col-3 s3 m3 mt-3">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                      <h5 class="card-title">
                        <%= user.name %>
                      </h5>
                      <div>
                        <% const badge_class = user.role != 1 ? "text-bg-success" : "text-bg-primary" %>
                          <span class="badge <%= badge_class %>">
                            <%= roles[user.role] %>
                          </span>
                      </div>
                    </div>
                    <h6 class="card-subtitle mb-2 text-muted">
                      <%= user.email %>
                    </h6>
                    <a href="/users/<%= user.id %>" class="btn btn-primary">Edit</a>
                    <a class="btn btn-danger">Delete</a>
                  </div>
                </div>
              </div>
            <% } %>
          <% } else { %>
            <h1>No user created</h1>
          <% } %>
        </div>
      </div>
    </div>
<%- include('../includes/end.ejs') %>